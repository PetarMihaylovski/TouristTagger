<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.saxion.touristattractiontagger">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AdminLogin.EditTouristAttraction"></activity>
        <activity android:name=".AdminLogin.EditCity" />
        <activity android:name=".AdminLogin.MakeNewTouristAttraction" />
        <activity android:name=".AdminLogin.TouristAttractionDetails" />
        <activity android:name=".AdminLogin.MakeNewCity" />
        <activity android:name=".AdminLogin.CityDisplayAdmin" />
        <activity android:name=".NormalLoginActivities.DisplayFriendsLocationScreen" />
        <activity android:name=".NormalLoginActivities.OptionsScreen" />
        <activity android:name=".NormalLoginActivities.AttractionSelectScreen" />
        <activity android:name=".NormalLoginActivities.CitySelectScreen" />
        <activity android:name=".LoginScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>